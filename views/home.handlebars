<div class="col-md-12">
    {{#if article}} {{#each article}}
    <div class="card">
        <div class="card-heading">
            <h4 class="card-title">{{this.title}}</h4>
        </div>
        <div class="card-body">
            <p> {{this.summary}}</p>
            <a href={{this.link}} target="_blank">{{this.link}}</a>
